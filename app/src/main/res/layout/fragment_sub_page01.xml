 <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.SubPage01">

     <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:orientation="vertical" android:layout_width="match_parent"
         android:layout_height="match_parent">



         <cn.fanrunqi.waveprogress.WaveProgressView
             android:layout_marginLeft="30dp"
             android:id="@+id/waveProgressbar2"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="57dp"
             android:background="@drawable/circle1"
             android:layout_width="130dp"
             android:layout_height="130dp" />

         <LinearLayout
             android:id="@+id/layoutview1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true"
             android:layout_marginLeft="31dp"
             android:layout_marginStart="31dp"
             android:layout_below="@+id/waveProgressbar2"
             android:layout_marginTop="45dp"
             android:orientation="vertical">
         <TextView
             android:id="@+id/sensorView1"
             android:layout_width="90dp"
             android:layout_height="90dp"
             android:background="@drawable/circle"
             android:gravity="center"
             android:textSize = "10dp"
             android:text="Sensor 0 Voltage = ????"
             android:textAppearance="?android:attr/textAppearanceMedium"
              />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="TEMPERATURE"

             android:background="#FF0000"/>
</LinearLayout>
         <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/layoutview1"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginRight="33dp"
    android:layout_marginEnd="35dp"

    android:orientation="vertical">
         <TextView
             android:id="@+id/sensorView2"
             android:layout_width="90dp"
             android:layout_height="90dp"
             android:background="@drawable/circle"
             android:gravity="center"
             android:textSize = "10dp"
             android:text="Sensor 0 Voltage = ????"
             android:textAppearance="?android:attr/textAppearanceMedium"
             />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HUMIDITY"
        android:layout_marginLeft="14dp"
        android:background="#FF0000"/>
</LinearLayout>
     </RelativeLayout>

</FrameLayout>
