<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sggscc.myapplication_6.MainActivity">

    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        android:background="#00ff00"
        android:clickable="true"
        android:onClick="click">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="0"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:clickable="true"
            android:onClick="click"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/textView1_text"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:clickable="false"
            android:text="PM 2.5"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/layout1"
        android:orientation="vertical"
        android:background="#00ff00"
        android:clickable="true"
        android:onClick="click">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="0"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/textView2_text"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:text="PM 10"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/layout1"
        android:orientation="vertical"
        android:background="#00ff00"
        android:clickable="true"
        android:onClick="click">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="0"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/textView3_text"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:text="CO2"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/layout2"
        android:layout_toRightOf="@+id/layout3"
        android:orientation="vertical"
        android:background="#00ff00"
        android:clickable="true"
        android:onClick="click">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="0"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/textView4_text"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:text="CO"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/layout3"
        android:orientation="vertical"
        android:background="#00ff00"
        android:clickable="true"
        android:onClick="click">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="0"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/textView5_text"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:text="Ammonia"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/layout4"
        android:layout_toRightOf="@+id/layout5"
        android:orientation="vertical"
        android:background="#00ff00"
        android:clickable="true"
        android:onClick="click">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="0"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/textView6_text"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:text="NO2"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/layout5"
        android:orientation="vertical"
        android:background="#00ff00"
        android:clickable="true"
        android:onClick="click">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="0"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/textView7_text"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:text="Ozone"
            android:textSize="20dp" />

    </LinearLayout>
</RelativeLayout>
</FrameLayout>
</ScrollView>